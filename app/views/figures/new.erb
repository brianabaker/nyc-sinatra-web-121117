<body>
  <h1>Create a New Figure</h1>


  <form action="/figures" method="POST">
    <div>
      <input type='text' name='figure[name]' id="figure_name" placeholder='Figure Name'/>

      <input type='text' name='title[name]' id="new_title" placeholder='Title Name'/>
    </div>
    <br/>
    <div>
      <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
        <%= title.name %>
        </input>
      <% end %>
    </div>
    <br/>
    <div>
      <input type='text' name='landmark[name]' id="new_landmark" placeholder='Landmark Name'/>
      <br/>
      <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
        <%= landmark.name %>
        </input>
      <% end %>
    </div>
    <br/>
    <input type='submit' value='Create New Figure' id='submit' />

  </form>

</body>
